                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="原价"
                android:textColor="#ff8e8e8e"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/original_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4.0dp"
                android:layout_toRightOf="@id/original_price_title_1"
                android:text="￥5200"
                android:textColor="#ff8e8e8e"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/price_up_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="起"
                android:textColor="#fffe8803"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/price_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/price_up_1"
                android:text="￥5200"
                android:textColor="#fffe8803"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="0.100000024dp"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@id/root2"
            android:layout_width="0.0dp"
            android:layout_height="170.0dp"
            android:layout_weight="1.0"
            android:padding="8.0dp" >

            <ImageView
                android:id="@id/imageView_2"
                android:layout_width="match_parent"
                android:layout_height="80.0dp"
