<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/home_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="3dp" >

        <LinearLayout
            android:id="@+id/home_search_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_search_left_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现更多" />

            <TextView
                android:id="@+id/home_search_left_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七洲有礼 在线互动 同城聚会" />

            <TextView
                android:id="@+id/home_search_left_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="惊喜活动天天有" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_search_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <View
        android:id="@+id/home_search_link"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/home_search"
        android:background="#ccc" />

</RelativeLayout>