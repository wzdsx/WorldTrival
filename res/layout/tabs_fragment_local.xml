<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/appicon20151210_111" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/green"
            android:background="@drawable/textview_border"
            
            android:text="我的行程" />

        <View
            android:layout_width="0.100000024dp"
            android:layout_height="18dp"
            android:background="@color/green" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:text="西安"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <View
            android:layout_width="0.100000024dp"
            android:layout_height="18dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@color/green" />

        <View
            android:layout_width="0.100000024dp"
            android:layout_height="18dp"
            android:background="@color/green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/change_place"
            android:textColor="@color/text_color_default"
            android:textSize="14sp" />

    </RelativeLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@id/root1"
            android:layout_width="0.0dp"
            android:layout_height="170.0dp"
            android:layout_weight="1.0"
            android:padding="8.0dp" >

            <ImageView
                android:id="@id/imageView_1"
                android:layout_width="match_parent"
                android:layout_height="80.0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/app_icon" />

            <TextView
                android:id="@id/title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_1"
                android:layout_marginTop="8.0dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="广州塔观光一日游广州塔观光一日游广州塔观光一日游"
                android:textColor="#ff4e4e4e"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/original_price_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="原价"
                android:textColor="#ff8e8e8e"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/original_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4.0dp"
                android:layout_toRightOf="@id/original_price_title_1"
                android:text="￥5200"
                android:textColor="#ff8e8e8e"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/price_up_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="起"
                android:textColor="#fffe8803"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/price_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/price_up_1"
                android:text="￥5200"
                android:textColor="#fffe8803"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="0.100000024dp"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@id/root2"
            android:layout_width="0.0dp"
            android:layout_height="170.0dp"
            android:layout_weight="1.0"
            android:padding="8.0dp" >

            <ImageView
                android:id="@id/imageView_2"
                android:layout_width="match_parent"
                android:layout_height="80.0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/app_icon" />

            <TextView
                android:id="@id/title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_2"
                android:layout_marginTop="8.0dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="广州塔观光一日游广州塔观光一日游广州塔观光一日游"
                android:textColor="#ff4e4e4e"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/original_price_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="原价"
                android:textColor="#ff8e8e8e"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/original_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4.0dp"
                android:layout_toRightOf="@id/original_price_title_2"
                android:text="￥5200"
                android:textColor="#ff8e8e8e"
                android:textSize="12.0sp" />

            <TextView
                android:id="@id/price_up_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="起"
                android:textColor="#fffe8803"
                android:textSize="13.0sp" />

            <TextView
                android:id="@id/price_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/price_up_2"
                android:text="￥5200"
                android:textColor="#fffe8803"
                android:textSize="15.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.100000024dp"
        android:background="@color/line" />

</LinearLayout>