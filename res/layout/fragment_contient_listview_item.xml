<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_contient_listview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/contient_listview_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/contient_listview_item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/contient_listview_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="西蒙人妖秀门票" />

        <TextView
            android:id="@+id/contient_listview_item_normalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="￥90.00" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/contient_listview_item_normalPrice"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/contient_listview_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥69.00"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/contient_listview_item_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单立减￥5.0" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>