<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    
	<RelativeLayout 
        android:id="@+id/home_title_search"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:background="#0f0"
        >
        <!-- logo -->
        <ImageView 
            android:id="@+id/home_logo_search"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            />
		<!-- 字 -->
        <TextView
            android:id="@+id/home_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_logo_search"
            android:text="环球" />
		<!-- search Button -->
		<EditText 
		    android:id="@+id/home_search_search"
		    android:layout_toRightOf="@id/home_text_search"
		   	android:layout_marginLeft="15dp"
		    android:textSize="12sp"
		    android:layout_width="wrap_content"
		    android:layout_height="25dp"
		    android:layout_centerVertical="true"
		    android:background="@drawable/shape_button"
		    android:hint="搜索的目的地/游玩项目/度假酒店..."
		    />
		<!-- 二维码 -->
		<ImageView 
		    android:id="@+id/home_two_code_search"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:src="@drawable/logo"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="10dp"
		    />
    </RelativeLayout>
    <ListView 
        android:id="@+id/homesearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_title_search"
        ></ListView>
   
</RelativeLayout>
