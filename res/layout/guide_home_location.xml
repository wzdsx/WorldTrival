<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/location_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" 
		android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/location_location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/icon_visit_the_local" />

        <TextView
            android:id="@+id/location_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当地玩乐" />
    </LinearLayout>
	<View 
		android:layout_width="1dp"
		android:layout_height="match_parent"
		android:background="#ccc"
	    />
    <LinearLayout
        android:id="@+id/location_airport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/location_airport_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/airport_shuttle" />

        <TextView
            android:id="@+id/location_airport_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机场接送" />
    </LinearLayout>
	<View 
	    android:layout_width="1dp"
	    android:layout_height="match_parent"
	    android:background="#ccc"
	    />
	<LinearLayout 
	    android:id="@+id/location_hotel"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    >
	    <ImageView 
	        android:id="@+id/location_hotel_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/icon_hotel_trip"
	        android:scaleType="fitXY"
	        />
	    <TextView 
	        android:id="@+id/location_hotel_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="酒店度假村"
	        />
	</LinearLayout>
	<View 
	    android:layout_width="1dp"
	    android:layout_height="match_parent"
	    android:background="#ccc"
	    />
	<LinearLayout 
	    android:id="@+id/location_friend"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    >
	    <ImageView 
	        android:id="@+id/location_friend_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_launcher"
	        android:scaleType="fitXY"
	        />
	    <TextView 
	        android:id="@+id/location_friend_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="结伴同游"
	        />
	</LinearLayout>
</LinearLayout>